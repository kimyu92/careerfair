doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='A paperless career fair app to keep flow of activies neat!')
        title Profile - CNS Career Fair
        
        // Latest compiled and minified CSS
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
    
        // Custom CSS
        link(rel='stylesheet', type='text/css', href='css/custom.css')
        
        // Font Awesome
        link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
        
        //Sticky-footer
        link(rel='stylesheet', href='/css/sticky-footer.css')

        
        // Jquery Lib
        script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.3.min.js')

        // Latest compiled and minified JavaScript
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')

        // Sidebar
        script(src='/js/sidebar.js')


        body
            .container
                a#menu-toggle.btn.btn-dark.btn-lg.toggle(href='#')
                    i.fa.fa-bars
                nav#sidebar-wrapper
                    ul.sidebar-nav
                    
                        // Close Button
                        a#menu-close.btn.btn-light.btn-lg.pull-right.toggle(href='#')
                            i.fa.fa-times
                    
                        li.sidebar-brand
                            a(href='/') Career Fair
                        li
                            a(href='/') Home
                        li
                            a(href='/account') Profile
                        li
                            a(href='/logout') Logout
                        li
                            a(href='#about') About
                br
                br
                br

                .media(style='line-height: 1.42857143; border: 1px solid #ddd;')
                    .media-left.media-top
                        img.media-object(src='#{user.photos[0].value}')


                    .media-body
                        h4.media-heading Profile
                        br
                        p
                            i.fa.fa-tag
                            |  id: #{user.id}
                        p
                            i.fa.fa-user
                            |  name : #{user.displayName}
                        p
                            i.fa.fa-envelope-o
                            |  e-mail : #{user.emails[0].value}

                        if (user.gender === "male")
                            p
                                i.fa.fa-mars
                                |  Gender : #{user.gender}

                        else if (user.gender === "female")
                            p
                                i.fa.fa-venus
                                |  Gender : #{user.gender}
                        else
                            p
                                i.fa.fa-genderless
                                |  Gender : #{user.gender}


            // Sticky footer
            footer.footer
                .container
                    br
                    p.text-muted &copy; 2015 Team XtremeNB. All Rights Reserved.
